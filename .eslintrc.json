{
	"env": {
		"es6": true,
		"node": true,
		"browser": true
	},
	"ecmaFeatures": {

	},
	"rules": {
		"lines-around-comment": [2, { "beforeBlockComment": true, "beforeLineComment": true,
			"allowBlockStart": true, "allowObjectStart": true, "allowArrayStart": true}],
		"array-bracket-spacing": [2, "never"],
		"block-scoped-var": [2],
		"block-spacing": [2, "always"],
		"brace-style": [2, "1tbs"],
		"camelcase": [2],
		"comma-style": [2, "last"],
		"consistent-this": [2, "self"],
		"comma-spacing": [2, {"before": false, "after": true}],
		"curly": [2, "all"],
		"dot-location": [2, "property"],
		"dot-notation": [2],
		"eol-last": [2],
		"eqeqeq": [2],
		"key-spacing": [2, {"beforeColon": false, "afterColon": true}],
		"linebreak-style": [2, "unix"],
		"max-depth": [2, 5],
		"max-len": [2, 120, 4, {"ignoreComments": true, "ignoreUrls": true}],
		"max-nested-callbacks": [2, 10],
		"new-parens": [2],
		"max-statements": [2, 75],
		"no-bitwise": [1],
		"new-cap": [2],
		"no-eq-null": [2],
		"no-undef": [2],
		"no-caller": [2],
		"no-empty": [2],
		"no-else-return": [2],
		"no-eval": [2],
		"no-redeclare":  [2, { "builtinGlobals":  true }],
		"no-useless-concat": [2],
		"no-useless-call": [2],
		"no-with": [2],
		"no-delete-var": [2],
		"no-undef-init": [2],
		"no-undefined": [2],
		"no-void": [2],
		"no-use-before-define": [2],
		"no-new-require": [2],
		"no-implied-eval": [2],
		"no-loop-func": [2],
		"no-lonely-if": [2],
		"no-mixed-spaces-and-tabs": [2, "smart-tabs"],
		"no-multiple-empty-lines": [2, {"max": 2, "maxEOF": 1}],
		"no-unneeded-ternary": [2, {"defaultAssignment": true }],
		"no-spaced-func": [2],
		"no-trailing-spaces": [2, { "skipBlankLines": false }],
		"no-multi-spaces":  [2, { "exceptions": { "Property": false, "VariableDeclarator": true, "ImportDeclaration": true } }],
		"no-multi-str": [0],
		"no-alert": [2],
		"no-debugger": [2],
		"no-dupe-args": [2],
		"no-dupe-keys": [2],
		"no-unreachable": [2],
		"no-duplicate-case": [2],
		"no-extra-semi": [2],
		"object-curly-spacing": [2, "never"],
		"quotes": [2, "single"],
		"quote-props": [2, "always"],
		"space-after-keywords": [2, "always"],
		"space-before-blocks": [2, "always"],
		"space-before-function-paren": [2, "never"],
		"space-in-parens": [2, "never"],
		"space-unary-ops": [2, { "words": true, "nonwords": false }],
		"space-return-throw-case": [2],
		"semi-spacing":  [2, {"before":  false, "after": true}],
		"semi":  [2, "always"],
		"use-isnan": [2],
		"wrap-iife": [2, "inside"]
	},
	"globals": {
		"require": true,
		"window" :  true,
		"document" :  true,
		"localStorage":true,
		"sessionStorage": true,
		"mongoose": true,
		"$": true,
		"io": true
	},
	"plugins": [
	]
}
